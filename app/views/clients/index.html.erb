<div class="container">
    <%= client_header %>
    <%= render "layouts/navigation" %>    
    
    <table class="table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Client Name</th>
                <th scope="col">Client type</th>
                <th scope="col">Primary Contact Name</th>
                <th scope="col">Primary Contact Email</th>
                <th scope="col">Primary Contact Phone</th>
                <th scope="col">Invoices</th>
            </tr>
        </thead>
        
        <tbody>
            <% @clients.each do |client| %>
            <tr>
                <td><%= client.name %></td>
                <td><%= client.client_type %></td>
                <td><%= client.poc_name %></td>
                <td><%= client.poc_email %></td>
                <td><%= client.poc_number %></td>
                <td class="space"><%= link_to "Show", client_path(client), class: "btn btn-sm btn-primary" %></td>
                <td class="space"><%= link_to "Edit", edit_client_path(client), class: "btn btn-sm btn-warning" %></td>
                <td class="space"><%= link_to "Delete", client_path(client), method: :delete, data: {confirm: "Are you sure you want to delete this client? This cannot be undone."}, class: "btn btn-sm btn-secondary" %></td>
            </tr>
            <% end %>            
        </tbody>
    </table>
</div>