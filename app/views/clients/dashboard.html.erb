<div class="row toptobottom">
    <div class="col-lg-auto menu-container" id="leftbar">
        <div class="menutop">
            <div class="logo-container pt-3">
                <%= image_tag "logo.png", size: "48x48" %>
            </div>
            
            <div class="spacer"></div>
            <div class="spacer"></div>
            <div class="spacer"></div>  
            
            <div class="row icon-nav">
                <%= link_to icon('fas', 'address-book'), clients_path, :size => "64x64", class: "icon-links" %>
                <div class="icon-text">Clients</div>
            </div>
            <div class="row icon-nav">
                <%= link_to icon('fas', 'file-invoice'), client_invoices_path(@client), :size => "64x64", class: "icon-links" %>  
                <div class="icon-text">Invoices</div>
            </div>            
            <div class="row icon-nav">
                <%= link_to icon('fas', 'cog'), clients_path, :size => "64x64", class: "icon-links" %>  
                <div class="icon-text">Settings</div>
            </div>           
        </div>

        <div class="menubottom">
            <div class="userbadge-container">
                <div class="badgename"><%= name_initials %></div>
            </div>
            <%= link_to "Logout", destroy_partner_session_path, method: :delete, class: "btn btn-danger" %>                
        </div>
    </div>
    <div class="container-fluid">
        <div class="row rightbar">
            <div class="col-lg-4 list-container">
                <div class="col-lg">
                    <div class="list-title"><!-- Create a if/else for list titles --> Clients</div>
                </div>
                <div class="col-lg listings">
                    <div class="tabswrapper">
                        <div class="tablist">
                            <%= link_to "Unpaid", clients_path, class: "styledtab" %>
                            <%= link_to "Paid", clients_path, class: "styledtab" %>
                            <%= link_to "Draft", clients_path, class: "styledtab" %>
                        </div>
                    </div>
                    
                    <div class="contactcards">
                        <div class="ccards-list">
                            <div class="cardsgroup">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-8 projection-container">
                Right
            </div>             
        </div>
    </div>
</div>