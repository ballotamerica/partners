<%= render "layouts/sidebar" %>

<div class="container-fluid">
    <div class="row rightbar">
        <div class="col-lg-4 list-container">
            <div class="col-lg">
                <div class="list-title"><!-- Create a if/else for list titles --> Invoices</div>
            </div>
            <div class="col-lg listings">
                <div class="tabswrapper">
                    <div class="tablist">
                        <%= link_to "Unpaid", clients_path, class: "styledtab" %>
                        <%= link_to "Paid", client_invoices_path, class: "styledtab" %>
                        <%= link_to "Draft", client_invoices_path, class: "styledtab" %>
                    </div>
                </div>
                
                <div class="contactcards">
                    <div class="ccards-list">
                        <div class="cardsgroup">
    <%= invoice_header %>   

    <div class="row">
        <%= render "layouts/navigation" %>
    </div>
    
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Invoice Number</th>
                <th scope="col">Invoice Date</th>
                <th scope="col">Due Date</th>
                <th scope="col">Amount Due</th>
            </tr>
        </thead>    
        
        <tbody>
            <% @invoices.each do |invoice| %>    
            <tr>
              <td><%= invoice.invoice_number %></td>
              <td><%= invoice.invoice_date %></td>
              <td><%= invoice.due_date %></td>
              <td><%= invoice.total_amount %></td>
              <td><%= link_to "Show", client_invoice_path(invoice.client, invoice), class: "btn btn-warning" %></td>
              <td><%= link_to "Edit", edit_client_invoice_path(invoice.client, invoice), class: "btn btn-warning" %></td>
              <td><%= link_to "Delete", client_invoice_path(invoice.client, invoice), method: :delete, data: {confirm: "Are you sure you want to delete this invoice? This cannot be undone."}, class: "btn btn-secondary" %></td>      
            </tr>
            <% end %>            
        </tbody>
    </table>                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8 projection-container">
            <%= invoice_header %>
            <%= render "layouts/navigation" %>  
        </div>             
    </div>
</div>