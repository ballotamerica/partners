<div class="container">
    <%= invoice_header %>   

    <div class="row">
        <%= render "layouts/navigation" %>
    </div>
    
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Invoice Number</th>
                <th scope="col">Invoice Date</th>
                <th scope="col">Due Date</th>
                <th scope="col">Amount Due</th>
            </tr>
        </thead>    
        <% @invoices.each do |invoice| %>    
        <tr>
          <td><%= invoice.invoice_number %></td>
          <td><%= invoice.invoice_date %></td>
          <td><%= invoice.due_date %></td>
          <td><%= invoice.total_amount %></td>
          <td><%= link_to "Show", client_invoice_path(invoice.client, invoice), class: "btn btn-warning" %></td>
          <td><%= link_to "Edit", edit_partners_client_invoice_path(invoice.client, invoice), class: "btn btn-warning" %></td>
          <td><%= link_to "Delete", partners_client_invoice_path(invoice.client, invoice), method: :delete, data: {confirm: "Are you sure you want to delete this invoice? This cannot be undone."}, class: "btn btn-secondary" %></td>      
        </tr>
        <% end %>
    </table>
</div>