<%= render "layouts/sidebar" %>

<div class="container-fluid">
    <div class="row rightbar">
        <div class="col-lg-5 list-container">
            <div class="list-content">
                <div class="list-title">
                    <h2>
                        Invoices
                    </h2>
                </div>
                
            
                <div class="listings">
                    <div class="tabswrapper">
                        <div class="tablist">
                            <%= link_to "All", invoices_path, class: "space" %>
                            <%= link_to "Unpaid", unpaid_invoices_path, class: "space" %>
                            <%= link_to "Paid", paid_invoices_path, class: "space" %>
                            <%= link_to "Draft", draft_invoices_path, class: "space" %>
                        </div>
                    </div>
                    
                    <div class="contactcards">
                        <div class="ccards-list">
                            <div class="cardsgroup">
                                <div>
                                   <%= no_invoice %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <%= render "layouts/projection" %>
        
    </div>
</div>