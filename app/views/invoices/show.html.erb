<div class="container">
    <div class="spacer"></div> 
    
    <ul class="list-group">
        <li class="list-group-item">Invoice Number: <%= @invoice.invoice_number %></li>
        <li class="list-group-item">Invoice Date: <%= @invoice.invoice_date %></li>
        <li class="list-group-item">Due Date: <%= @invoice.due_date %></li>
    </ul>
     
    <div class="spacer"></div>
    
    <p>
        <%= link_to "Edit", edit_client_invoice_path(@invoice), class: "btn btn-warning" %>     <%= link_to "Delete", client_invoice_path(@invoice), method: :delete, data: {confirm: "Are you sure you want to delete this invoice? This cannot be undone."}, class: "btn btn-secondary" %>     <%= link_to "Back to invoices", client_invoices_path, class: "btn btn-dark" %>    
    </p>
</div>